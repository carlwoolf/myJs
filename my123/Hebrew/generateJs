if [ "$#" -ne 3 ]; then
  echo "Usage: $0 <test30> <additional30> <fullStudy>"
  return
fi

echo "RabbinicTerm,Term(English),PhraseContext,PhraseContext (English),Comments" > study.csv
cat $1 $2 | grep -v "RabbinicTerm,Term(English)" >> study.csv

echo "RabbinicTerm,Term(English),PhraseContext,PhraseContext (English),Comments" > fullStudy.csv
cat $3 | grep -v "RabbinicTerm,Term(English)" >> fullStudy.csv

sort -R $1 | grep -v "RabbinicTerm,Term(English)" > t.csv
echo "RabbinicTerm,Term(English),PhraseContext,PhraseContext (English),Comments" > shuffledTest.csv
cat t.csv >> shuffledTest.csv

echo "// from $3"     > dataForFullStudy.js
echo "// from $1 $2"  > dataForStudy.js
echo "// from $1 $2"  > dataForTest.js
echo "// from $1 $2"  > dataForSolution.js

python pyParse.py study.csv         study       >> dataForStudy.js
python pyParse.py fullStudy.csv     study       >> dataForFullStudy.js
python pyParse.py shuffledTest.csv  test        >> dataForTest.js
python pyParse.py shuffledTest.csv  solution    >> dataForSolution.js


